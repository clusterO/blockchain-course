<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wallet.Views.AboutPage"
             xmlns:vm="clr-namespace:Wallet.ViewModels"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Button Text="Scan QR code" x:Name="btnScan" Clicked="btnScanClicked" />
            <Entry x:Name="txtBarcode" Placeholder="Text to scan" />
            <Entry x:Name="txtAmount" Placeholder="price" />
            <Button Text="Pay" x:Name="btnPay" Clicked="btnPayClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
